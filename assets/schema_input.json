{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/enhancerflow/master/assets/schema_input.json",
    "title": "nf-core/enhancerflow pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "peaks": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^.*\\.(narrowPeak|bed)(\\.gz)?$",
                "errorMessage": "Peaks file must be in narrowPeak or BED format"
            },
            "bam": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^.*\\.bam$",
                "errorMessage": "BAM file must have .bam extension"
            },
            "control_bam": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^.*\\.bam$",
                "errorMessage": "Control BAM must have .bam extension"
            },
            "condition": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Condition must not contain spaces",
                "meta": ["condition"]
            },
            "timepoint": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Timepoint must not contain spaces",
                "meta": ["timepoint"]
            }
        },
        "required": ["sample", "peaks", "bam"]
    }
}
